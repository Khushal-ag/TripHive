<% layout('layouts/boilerplate.ejs') %>
<link rel="stylesheet" href="/stylesheets/shop.css" />
<div class="text-center display-1 font-bold heading">This is Shop</div>
<div class="d-flex justify-content-between flex-wrap align-items-center">
  <% for(let i=1;i<=6;i++){ %>
  <div
    class="card shadow-lg rounded-3 mb-4"
    style="width: 26rem; background-color: lightgray"
  >
    <img src="<%= products[0].imgsrc %>" alt="" class="card-img-top bg-dark" />
    <div class="d-flex card-body justify-content-between px-2">
      <div class="h4">
        Points : <span class="h4 text-success"><%= products[0].points%></span>
      </div>
      <form action="/shop/<%= products[0].id %>" method="post">
        <button class="btn btn-primary px-3 py-2">Buy Now</button>
      </form>
    </div>
  </div>
  <% } %>
</div>
